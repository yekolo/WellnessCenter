<?xml version="1.0" encoding="utf-8" ?>

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    
    <session-factory>
        
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql:centrobenessere</property>
        <property name="hibernate.connection.username">pguser</property>
        <property name="hibernate.connection.password">pguser</property>
        
        <property name="current_session_context_class">thread</property>
        <property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>
        
        <!--
        <property name="hibernate.c3p0.min_size">1</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">1800</property>
        <property name="hibernate.c3p0.min_statements">150</property>
        -->
        
        <property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="format_sql">false</property>
        
        <!-- <property name="hbm2ddl.auto">create</property> -->

        <!-- mapping -->
        <!-- <mapping class="it.unibas.modello.modello.Bean" /> -->
        <mapping class="it.unibas.centrobenessere.modello.Utente" />
        <mapping class="it.unibas.centrobenessere.modello.Prestazione" />
        <mapping class="it.unibas.centrobenessere.modello.Prenotazione" />

    </session-factory>
    
</hibernate-configuration>